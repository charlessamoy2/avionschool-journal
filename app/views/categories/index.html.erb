<h1> Charles' Categories </h1>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th class="table-btns">Show</th>
            <th class="table-btns">Edit</th>
        </tr>
    </thead>

    <tbody>
        <% @categories.each do |category|%>
            <tr>
                <td><%= category.id%></td>
                <td><%= category.name%></td>
                <td><%= category.description%></td>
                <td><%= link_to 'Show', show_category_path(:id => category.id)%></td>
                <td><%= link_to 'Edit', edit_category_path(:id => category.id)%></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'New Category', new_category_path, class: "btn-link-to"%>