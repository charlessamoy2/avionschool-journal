<header>
    <h1> Categories </h1>
    <%= link_to 'New Category', new_category_path, class: "btn-link-to"%>
    <%= link_to 'Back to Tasks', tasks_path, class: "btn-link-to"%>
</header>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th class="table-btns">Actions</th>
        </tr>
    </thead>

    <tbody>
        <% @categories.each do |category|%>
            <tr>
                <td>
                <%= link_to category_path(category) do%>
                    <%= category.name%>
                <% end %>
                </td>
                <td><%= category.description%></td>
                <td>
                    <%= link_to 'Edit', edit_category_path(category)%>
                    |
                    <%= link_to 'Delete', category_path(category), method: :delete, data: {confirm: "Are you sure?"}%>
                </td>
                
            </tr>
        <% end %>
    </tbody>
</table>