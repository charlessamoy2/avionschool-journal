<% @category.errors.full_messages.each do |message|%>
    <ul>
        <li>
            <%= message%>
        </li>
    </ul>
<% end %>




<%= form_for @category do |f| %>
        
    <fieldset>
        <%= f.label :name %>
        <%= f.text_field :name %>

        <br/>
        <br>

        <%= f.label :description %>
        <%= f.text_area :description %>
    </fieldset>

    <div class="form-actions">
        <%= f.submit%>
    </div>
    
<% end %>

<%= link_to "Back to Categories", categories_path, class: "btn-link-to"%>