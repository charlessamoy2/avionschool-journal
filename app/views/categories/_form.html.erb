<%= form_for @category do |f| %>
    <% @category.errors.full_messages.each do |message|%>
        <ul>
            <li>
                <%= message%>
            </li>
        </ul>
    <% end %>
    
    <fieldset>
        <%= f.label :name %>
        <%= f.text_field :name %>

        <br/>
        <br>

        <%= f.label :description %>
        <%= f.text_area :description %>
    </fieldset>

    <div class="form-actions">
        <%= f.submit%>
    </div>
    
<% end %>