<%= form_with scope: :category, url: create_category_path, local: true do |f| %>

<h1>New Category</h1>

<div>
    <% if @category.errors.any? %>
        <ul>
            <% @category.errors.full_messages.each do |message| %>
                <li>
                    <%= message%>
                </li>
            <% end %>
        </ul>
    <% end %>
</div>

<div>
    <%= f.label :name, "Name:" %>
    <%= f.text_field :name %>
</div>

<div>
    <%= f.label :description, "Description:" %>
    <%= f.text_area :description %>
</div>

<div class="form-submit">
    <%= f.submit %>
</div>

<% end %>

<%= link_to 'Back to Categories', categories_path, class: "btn-link-to" %>